<Scene xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.nstu.avtf.lab1.gui.MainWindow">
    <root>
        <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="220.0" minWidth="220.0" prefHeight="480.0" prefWidth="800.0">
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="Файл">
                  <items>
                        <MenuItem mnemonicParsing="false" text="Новый список" />
                        <MenuItem mnemonicParsing="false" text="Открыть список..." />
                        <MenuItem mnemonicParsing="false" text="Сохранить список..." />
                        <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem mnemonicParsing="false" text="Выход" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Справка">
                  <items>
                    <MenuItem mnemonicParsing="false" text="О программе..." />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <top>
                  <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <items>
                      <Button mnemonicParsing="false" text="Вставить в конец" />
                        <Button mnemonicParsing="false" text="Вставить по индексу" />
                        <Button mnemonicParsing="false" text="Удалить по индексу" />
                        <Button mnemonicParsing="false" text="Отсортировать" />
                    </items>
                  </ToolBar>
               </top>
               <center>
                  <ListView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
         </center></BorderPane>
    </root>
</Scene>
